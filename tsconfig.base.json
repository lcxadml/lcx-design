{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "paths": {
      "lcx-design/*": ["packages/*"],
      "lcx-design": ["packages/lcx-design"]
    },
    "preserveSymlinks": true
  }
}
